{
  "components/cart/gift-certificates": "<div class=\"cart-totals-block cart-totals-giftcards\" data-gift-certificates>\n  <form class=\"form form-inline\" method=\"post\" action=\"{{urls.cart}}\" data-gift-certificate-form>\n    <input type=\"hidden\" name=\"action\" value=\"applycoupon\">\n    <input\n      class=\"form-input\"\n      id=\"couponcode\"\n      type=\"text\"\n      name=\"certcode\"\n      value=\"\"\n      placeholder=\"{{lang 'cart.gift_certificates.gift_certificate'}}\"\n      data-gift-certificate-input\n    >\n    <button class=\"button button-secondary button-small\" type=\"submit\">\n      {{lang 'cart.gift_certificates.submit'}}\n    </button>\n  </form>\n\n  {{! Gift Certificates }}\n  {{#each cart.gift_certificates}}\n    <div class=\"cart-total-row\">\n      <span class=\"cart-total-label\">\n        {{code}}\n        <span class=\"cart-total-label\">{{lang 'cart.gift_certificates.remaining' value=remaining.formatted}}</span>\n      </span>\n      <a class=\"cart-action-minor\" href=\"{{remove_url}}\" data-gift-certificate-remove>{{lang 'cart.gift_certificates.remove'}}</a>\n    </div>\n  {{/each}}\n</div>\n"
}
