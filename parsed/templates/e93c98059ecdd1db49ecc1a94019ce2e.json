{
  "components/product-catalog/sort": "<form class=\"product-list-sort form\" method=\"get\" data-sort-by>\n  <fieldset class=\"form-fieldset\">\n    <div class=\"form-field form-field-radio\">\n      {{#if result_count}}\n        <label class=\"form-label\">\n          <input\n            class=\"form-input form-radio\"\n            type=\"radio\"\n            name=\"sort\"\n            value=\"featured\"\n            {{#if sort '===' 'relevance'}}checked{{/if}}\n          >\n          <span class=\"form-label-text\">{{lang 'common.sorter.relevance'}}</span>\n        </label>\n      {{/if}}\n\n      <label class=\"form-label\">\n        <input\n          class=\"form-input form-radio\"\n          type=\"radio\"\n          name=\"sort\"\n          value=\"featured\"\n          {{#if sort '===' 'featured'}}checked{{/if}}\n        >\n        <span class=\"form-label-text\">{{lang 'common.sorter.featured'}}</span>\n      </label>\n\n      <label class=\"form-label\">\n        <input\n          class=\"form-input form-radio\"\n          type=\"radio\"\n          name=\"sort\"\n          value=\"newest\"\n          {{#if sort '===' 'newest'}}checked{{/if}}\n        >\n        <span class=\"form-label-text\">{{lang 'common.sorter.newest'}}</span>\n      </label>\n\n      <label class=\"form-label\">\n        <input\n          class=\"form-input form-radio\"\n          type=\"radio\"\n          name=\"sort\"\n          value=\"bestselling\"\n          {{#if sort '===' 'bestselling'}}checked{{/if}}\n        >\n        <span class=\"form-label-text\">{{lang 'common.sorter.top_sellers'}}</span>\n      </label>\n\n      <label class=\"form-label\">\n        <input\n          class=\"form-input form-radio\"\n          type=\"radio\"\n          name=\"sort\"\n          value=\"alphaasc\"\n          {{#if sort '===' 'alphaasc'}}checked{{/if}}\n        >\n        <span class=\"form-label-text\">{{lang 'common.sorter.alpha_asc'}}</span>\n      </label>\n\n      <label class=\"form-label\">\n        <input\n          class=\"form-input form-radio\"\n          type=\"radio\"\n          name=\"sort\"\n          value=\"alphadesc\"\n          {{#if sort '===' 'alphadesc'}}checked{{/if}}\n        >\n        <span class=\"form-label-text\">{{lang 'common.sorter.alpha_desc'}}</span>\n      </label>\n\n      <label class=\"form-label\">\n        <input\n          class=\"form-input form-radio\"\n          type=\"radio\"\n          name=\"sort\"\n          value=\"avgcustomerreview\"\n          {{#if sort '===' 'avgcustomerreview'}}checked{{/if}}\n        >\n        <span class=\"form-label-text\">{{lang 'common.sorter.reviews'}}</span>\n      </label>\n\n      <label class=\"form-label\">\n        <input\n          class=\"form-input form-radio\"\n          type=\"radio\"\n          name=\"sort\"\n          value=\"priceasc\"\n          {{#if sort '===' 'priceasc'}}checked{{/if}}\n        >\n        <span class=\"form-label-text\">{{lang 'common.sorter.price_asc'}}</span>\n      </label>\n\n      <label class=\"form-label\">\n        <input\n          class=\"form-input form-radio\"\n          type=\"radio\"\n          name=\"sort\"\n          value=\"pricedesc\"\n          {{#if sort '===' 'pricedesc'}}checked{{/if}}\n        >\n        <span class=\"form-label-text\">{{lang 'common.sorter.price_desc'}}</span>\n      </label>\n    </div>\n  </fieldset>\n</form>\n"
}
